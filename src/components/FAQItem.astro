---
import type { FAQ } from '../data/faqs';

interface Props {
  item: FAQ;
  index: number;
}

const { item, index } = Astro.props;
const summaryId = `faq-${index}-summary`;
const contentId = `faq-${index}-content`;
---

<details class="group rounded-2xl border border-slate-200/60 bg-white/70 p-5 shadow-sm transition hover:border-brand-300 dark:border-slate-700 dark:bg-slate-900/70">
  <summary
    id={summaryId}
    class="flex cursor-pointer items-center justify-between gap-4 text-left text-base font-semibold text-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-brand-300 dark:text-foreground-dark"
    aria-controls={contentId}
  >
    {item.question}
    <span class="flex h-9 w-9 items-center justify-center rounded-full border border-slate-200 text-slate-500 transition group-open:rotate-45 group-open:bg-brand-500 group-open:text-white dark:border-slate-600 dark:text-slate-300">
      <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 5v14M5 12h14" />
      </svg>
    </span>
  </summary>

  <div id={contentId} class="mt-3 text-sm leading-relaxed text-foreground-muted dark:text-slate-300">
    {item.answer}
  </div>
</details>

