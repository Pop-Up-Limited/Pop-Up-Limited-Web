---
import { COMPANY_NAME, SUPPORT_EMAIL } from '../config/site';
---

<section class="card-surface flex flex-col gap-4">
  <h2 class="text-xl font-semibold text-foreground dark:text-foreground-dark">
    Contact our support team
  </h2>
  <p class="text-sm text-foreground-muted dark:text-slate-300">
    We aim to respond within one business day for standard plans and within four hours for enterprise coverage. {/* TODO: adjust SLA messaging */}
  </p>

  <div class="space-y-3 text-sm">
    <div>
      <span class="block text-xs font-semibold uppercase tracking-wide text-slate-400">
        Email
      </span>
      <a href={`mailto:${SUPPORT_EMAIL}`} class="text-brand-600 hover:text-brand-700">
        {SUPPORT_EMAIL}
      </a>
    </div>
    <div>
      <span class="block text-xs font-semibold uppercase tracking-wide text-slate-400">
        Company
      </span>
      <p class="text-foreground dark:text-foreground-dark">{COMPANY_NAME}</p>
    </div>
  </div>
</section>

