---
import Layout from '../../layouts/Layout.astro';
import { COMPANY_NAME } from '../../config/site';

const PAGE_TITLE = `Floral Privacy Policy Â· ${COMPANY_NAME}`;
const UPDATED_ON = '2025-10-30'; // TODO: update last modified date
const sections = [
  { id: 'overview', title: '1. Overview' },
  { id: 'information-we-collect', title: '2. Information We Collect' },
  { id: 'how-we-use', title: '3. How We Use Information' },
  { id: 'sharing', title: '4. Sharing & Disclosure' },
  { id: 'retention', title: '5. Data Retention' },
  { id: 'rights', title: '6. Your Rights & Choices' },
  { id: 'contact', title: '7. Contact Us' }
];
---

<Layout title={PAGE_TITLE} description="Privacy Policy placeholder for Floral by Pop Up Limited." noIndex={false}>
  <article class="mx-auto w-full max-w-4xl px-4 pb-24 pt-16 md:px-6 md:pt-20">
    <header class="mb-12 space-y-4">
      <p class="text-sm uppercase tracking-wide text-brand-500">
        Floral Legal
      </p>
      <h1 class="text-4xl font-semibold text-foreground md:text-5xl dark:text-foreground-dark">
        Floral Privacy Policy
      </h1>
      <p class="text-sm text-foreground-muted dark:text-slate-300">
        Last updated: <time dateTime={UPDATED_ON}>{UPDATED_ON}</time>
      </p>
      <p class="text-base text-foreground-muted dark:text-slate-300">
        {/* TODO: replace placeholder summary */}
        This privacy notice explains how Pop Up Limited collects, uses, and safeguards data when you interact with Floral and related services.
      </p>
    </header>

    <nav aria-label="Table of contents" class="mb-12 rounded-2xl border border-slate-200/60 bg-white/80 p-6 shadow-sm dark:border-slate-700 dark:bg-slate-900/70">
      <h2 class="text-sm font-semibold uppercase tracking-wide text-foreground-muted dark:text-slate-300">
        On this page
      </h2>
      <ol class="mt-4 space-y-3 text-sm text-foreground-muted dark:text-slate-300">
        {sections.map((section) => (
          <li>
            <a class="hover:text-brand-600" href={`#${section.id}`}>
              {section.title}
            </a>
          </li>
        ))}
      </ol>
    </nav>

    <div class="space-y-12 text-base leading-relaxed text-foreground-muted dark:text-slate-300">
      <section id="overview">
        <h2 class="text-2xl font-semibold text-foreground dark:text-foreground-dark">
